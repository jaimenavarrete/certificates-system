@model StudentFormViewModel

<div class="modal fade" id="form-modal" tabindex="-1" aria-labelledby="form-modal" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" id="form-create" class="modal-content" novalidate>
            <div class="modal-header">
                <h5 id="form-modal-label" class="modal-title text-primary fw-bold"><i class="las la-plus-circle fs-4"></i> Crear estudiante</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="form-group has-danger mb-3">
                    <label class="col-form-label fw-bold" for="input-name">NIE:</label>
                    <input type="text" asp-for="Nie" id="input-nie" class="form-control input-create">
                    <div id="feedback-nie" class="invalid-feedback"></div>
                </div>

                <div class="form-group has-danger mb-3">
                    <label class="col-form-label fw-bold" for="input-name">Nombres del estudiante:</label>
                    <input type="text" asp-for="Name" id="input-name" class="form-control input-create">
                    <div id="feedback-name" class="invalid-feedback"></div>
                </div>

                <div class="form-group has-danger mb-3">
                    <label class="col-form-label fw-bold" for="input-name">Apellidos del estudiante:</label>
                    <input type="text" asp-for="Surname" id="input-surname" class="form-control input-create">
                    <div id="feedback-surname" class="invalid-feedback"></div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary"><i class="las la-save fs-4"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>