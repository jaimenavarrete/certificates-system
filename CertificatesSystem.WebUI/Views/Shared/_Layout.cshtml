@{
    ViewData["Title"] = "Constancia de estudio";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CertificatesSystem.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CertificatesSystem.WebUI.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                C.E.C. "Pbro. René Valle"
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="las la-home"></i> Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="las la-torah"></i> Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-primary rounded" asp-area="" asp-controller="Home" asp-action="Index"><i class="las la-plus-circle"></i> Crear constancia</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <h1 class="display-2 text-center text-white fw-bold my-4">
            <img class="d-block mx-auto" src="~/img/logo.png" title="Logotipo de la institución" alt="Logotipo de la institución" width="125px" />
            Sistema de Constancias
        </h1>

        <section class="card shadow border-0 overflow-hidden p-4 mb-4">
            <h2 class="card-title h4 text-primary fw-bold border-bottom border-2 border-primary mb-2">Panel de administración</h2>

            <div class="row py-4">
                <div class="col-md-3 mb-4 mb-md-0">
                    <partial name="_ManageNavMenu"/>
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </section>
    </main>
</div>

<footer class="border-top footer bg-dark text-white text-center py-3">
    <div class="container">
        &copy; 2022 - Sistema de Constancias - Complejo Educativo Católico "Presbítero René Valle" - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>