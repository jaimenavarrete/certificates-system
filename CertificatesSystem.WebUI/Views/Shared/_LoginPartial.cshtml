@using Microsoft.AspNetCore.Identity
@using CertificatesSystem.Models.Data.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="las la-home"></i> Inicio</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="las la-torah"></i> Privacy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white btn btn-primary rounded" asp-area="" asp-controller="Certificates" asp-action="Index"><i class="las la-plus-circle"></i> Crear constancia</a>
        </li>
    </ul>
    
    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola, @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white"><i class="las la-sign-out-alt"></i> Cerrar sesión</button>
            </form>
        </li>
    </ul>
}
else
{
    <div></div>
    
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="las la-sign-in-alt"></i> Iniciar sesión</a>
        </li>
    </ul>
}
